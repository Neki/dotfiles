[user]
	name = Beno√Æt Faucon
	email = benoit.faucon@terality.com
[push]
	default = simple
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	co = checkout
	ci = commit
	st = status
	br = branch
[core]
	editor = vim
	excludesfile = /home/benoit/.gitignore_global
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = TwoDark
    navigate = true
    # side-by-side = true

[interactive]
    diffFilter = delta --color-only
